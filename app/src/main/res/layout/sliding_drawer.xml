<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/rl_slide_drawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#433f3f">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="#ccc" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Jonatha Doe"
                android:textColor="@color/WHITE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginLeft="20dp"
                android:text="abcz@gmail.com"
                android:textColor="@color/WHITE"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_title"
            android:background="#d3d3d3"></View>

        <LinearLayout
            android:id="@+id/rl_home"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16sp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/ic_home"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/ic_home" />-->

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Reset Password"
                android:textColor="#FFF"
                android:textSize="14dp" />


        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_home"
            android:background="#d3d3d3">

        </View>

        <LinearLayout
            android:id="@+id/rl_cart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16sp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/iv_cart"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/ic_cart" />-->

            <TextView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Reviews"
                android:textColor="#FFF"
                android:textSize="14dp" />


        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_cart"
            android:background="#d3d3d3"></View>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_recent_orders"
            android:background="#d3d3d3"
            android:visibility="visible"></View>

        <LinearLayout
            android:id="@+id/rl_reviews"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16sp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/imageview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/ic_review" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="About Erotic Sniper"
                android:textColor="#FFF"
                android:textSize="14dp" />


        </LinearLayout>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_reviews"
            android:background="#d3d3d3"></View>


        <LinearLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view7"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16sp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/img_signin"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/ic_login" />-->

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Log Out"
                android:textColor="#FFF"
                android:textSize="14dp" />


        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_login"
            android:background="#d3d3d3"></View>

        <LinearLayout
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view4"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone">

            <!--<ImageView-->
            <!--android:layout_width="25dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/logout" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Log Out"
                android:textColor="#FFF"
                android:textSize="14dp" />


        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_logout"
            android:background="#d3d3d3"
            android:visibility="gone"></View>

        <LinearLayout
            android:id="@+id/rl_recent_orders"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rl_cart"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/img_refresh"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:src="@drawable/ic_refresh" />-->

            <TextView
                android:id="@+id/tv_recentorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Notifications"
                android:textColor="#FFF"
                android:textSize="14dp" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
